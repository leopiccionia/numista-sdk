{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "#lib": ["src/index.ts"],
      "#tests": ["tests/setup.ts"],
    },
    "strict": true,
    "stripInternal": true,
    "target": "ESNext"
  },
  "include": ["src", "tests"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
  }
}
